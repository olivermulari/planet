{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": "error",
    "indent": [
      "error",
      2
    ],
    "eol-last": [
      "error",
      "always"
    ]
  },
  "env": {
    "browser": true,
    "node": true
  }
}